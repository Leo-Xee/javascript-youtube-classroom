{
  "env": {
    "browser": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "ignorePatterns": ["cypress/", "dist/"],
  "parser": "babel-eslint",
  "rules": {
    "no-new": "off",
    "no-return-assign": "off",
    "no-param-reassign": "off",
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off"
  }
}
